= render 'layouts/sidebar'
.span7.profile.well
  %h1 Your Profile

  %h2 Basic Info
  %h3 
    Name: 
    %span #{ attr_or_edit(@user, @user.full_name) }
  %h3 
    Email: 
    %span #{ attr_or_edit(@user, @user.email) }
  %h3 
    Phone: 
    %span #{ attr_or_edit(@user, @user.phone) }

  %h2 Other Info
  %h3 
    Height: 
    %span #{ attr_or_edit(@user, @user.height) }
  %h3 
    Weight: 
    %span #{ attr_or_edit(@user, @user.weight) }
  %h3 
    Birthdate: 
    %span #{ attr_or_edit(@user, @user.birthdate) }