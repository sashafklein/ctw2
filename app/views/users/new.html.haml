= form_for @user do |f|
  = f.label :email
  = f.text_field :email

  = f.label :password
  = f.password_field :password, placeholder: "Password"

  = f.label :password_confirmation
  = f.password_field :password_confirmation

  = f.label :phone, "Phone Number"
  = f.text_field :phone, placeholder: '(012)-345-6789'

  = f.submit "Sign Up"