.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "/"} crushthewod
      .nav-collapse.collapse
        %ul.nav
          %li{:class => "#{active?('home')}" }
            =link_to 'Home', '/'
          %li{:class => "#{active?('archive')}" }
            =link_to 'Past', '/archive'
          - if user_signed_in?
            %li{:class => "#{active?('home')}" }
              =link_to 'Sign Up', '/register'
          %li{:class => "#{active?('blog')}" }
            =link_to 'Blog', '/blog'
          %li{:class => "#{active?('contact')}" }
            =link_to 'Contact', '/contact'
        - if user_signed_in?
          %form.navbar-form.pull-right{:action => "/login", :method => "post"}
            %input.span2{:name => "username", :placeholder => "Email Address", :type => "text"}/
            %input.span2{:name => "password", :placeholder => "Password", :type => "password"}/
            %button.btn{:type => "submit"} Sign in
        - else 
          .navbar-message
            %span
              / Logged in as: #{current_user.name}
            %a.btn.btn-inverse{:href => "/logout"} Sign out

.container-fluid
  .row-fluid
    .span3
      .well.sidebar-nav
        %ul.nav.nav-list
          %li.nav-header Workouts
          %li{:class => "#{active?('archive')} nav-log" }
            =link_to 'Past', '/archive'
          %li{:class => "#{active?('logwod')} nav-log" }
            =link_to 'Log', '/logwod'
          %li.nav-header Account          
          %li{:class => "#{active?('profile')} nav-log" }
